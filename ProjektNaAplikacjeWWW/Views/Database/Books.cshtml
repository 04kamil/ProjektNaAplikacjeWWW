@model IEnumerable<ProjektNaAplikacjeWWW.Models.Book>
@using ProjektNaAplikacjeWWW.Models
@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descryption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pages)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descryption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>

                @{ 
                    User u = (User)Session["Logged"];
                }
                
                
                    @if ((u != null) && (u.AccountType == 1))
                    {
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.BookId }) | @Html.ActionLink("Delete", "DeleteBook", new { id = item.BookId }) | @Html.ActionLink("Details", "Details", new { id = item.BookId })
                        </p>
                    }
                    else
                    {
                        <p>
                            @Html.ActionLink("Details", "Details", new { id = item.BookId })
                        </p>
                        
                    }












        </td>
    </tr>
}

</table>
